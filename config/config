export PLUGIN_LOCAL_HTTPS_NAME=local-https

# export PLUGIN_LOCAL_HTTPS_DATA=$(plugin::get_app_data_path $PLUGIN_LOCAL_HTTPS_NAME)
# export PLUGIN_LOCAL_HTTPS_LOGS=$(plugin::get_app_logs_path $PLUGIN_LOCAL_HTTPS_NAME)
# export PLUGIN_LOCAL_HTTPS_CONFIGS=$(plugin::get_app_configs_path $PLUGIN_LOCAL_HTTPS_NAME)

export PLUGIN_LOCAL_HTTPS_ROOT_CA_COMMON_NAME="LOCAL HTTPS/TLS CA"
export PLUGIN_LOCAL_HTTPS_ROOT_CA_REQUEST_CONFIG=${PLUGIN_DIR}/config/conf/ca/certificate-authority-request.conf
export PLUGIN_LOCAL_HTTPS_ROOT_CA_DATA_DIR=$PLUGIN_DATA/ca
export PLUGIN_LOCAL_HTTPS_ROOT_CA_PRIVATE_KEY=$PLUGIN_LOCAL_HTTPS_ROOT_CA_DATA_DIR/root_ca.key
export PLUGIN_LOCAL_HTTPS_ROOT_CA_SELF_CERTIFICATE=$PLUGIN_LOCAL_HTTPS_ROOT_CA_DATA_DIR/root_ca.crt

export PLUGIN_LOCAL_HTTPS_DOMAIN_REQUEST_CONFIG_TEMPLATE=${PLUGIN_DIR}/config/conf/domain/domain-request.conf
export PLUGIN_LOCAL_HTTPS_DOMAIN_EXTFILE_CONFIG_TEMPLATE=${PLUGIN_DIR}/config/conf/domain/domain-extfile.conf

export PLUGIN_LOCAL_HTTPS_DOMAIN_DATA_DIR=$PLUGIN_DATA/domain

if [ ! -d "$PLUGIN_LOCAL_HTTPS_ROOT_CA_DATA_DIR" ]; then
  mkdir -p $PLUGIN_LOCAL_HTTPS_ROOT_CA_DATA_DIR
fi

if [ ! -d "$PLUGIN_LOCAL_HTTPS_DOMAIN_DATA_DIR" ]; then
  mkdir -p $PLUGIN_LOCAL_HTTPS_DOMAIN_DATA_DIR
fi
